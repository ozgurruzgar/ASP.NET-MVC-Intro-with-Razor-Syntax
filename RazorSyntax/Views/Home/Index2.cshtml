
@{
    ViewBag.Title = "Index2";
}

<h2>Index2</h2>

@{ 
    string[] names = new string[3] { "Özgür","Sedat","Engin" };
    int index = 0;


    <ul>
        @foreach (var name in names)
        {
            <li>
                @if(index % 2 == 0)
                {
                <b>
                    @name
                </b>
                }
                else
                {
                    @name
                }
            </li>
            index++;
        }
    </ul>

}

<hr />

@for (int i = 0; i < 10; i++)
{
    @("Sayı :"+ i.ToString())<br />
}